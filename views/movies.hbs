<div class="container">
  <div class="row-title">
    <h1 class="title">{{title}}</h1>
  </div>
  <div class="row">
    {{#if movies}}
      {{#each movies as |movie|}}
        <div class="col-4 beer-container">
          {{!-- <div class="card beer-card">
          {{> beerpartial}}
          </div> --}}
          <div class="card">
            <img src="{{movie.image}}" alt="">
            <h2>{{movie.title}}</h2>
          </div>
          <div class="btn-container">
            <a class="btn btn-pink" href="/movies/{{movie.id}}">See More</a>
          </div>     
        </div>
      {{/each}}
    {{/if}}
  </div>
</div>
</div>